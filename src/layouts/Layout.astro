---
import { cn } from '@/lib/utils';
import BottomNavigation from '@/components/BottomNavigation.astro';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" /> {/* Revertido: charSet -> charset */}
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="flex flex-col min-h-screen"> {/* Revertido: className -> class */}
		<div class="flex-grow pb-16"> {/* Revertido: className -> class */} {/* Padding bottom para dejar espacio para BottomNavigation */}
			<main class="container mx-auto px-4 py-8"> {/* Revertido: className -> class */}
				<slot />
			</main>
		</div>
		<BottomNavigation pathname={Astro.url.pathname} /> {/* AÃ±adido pathname */}
	</body>
</html>
<style is:global>
  @import url('https://fonts.googleapis.com/css2?family=Outfit:wght@400;500;600;700&display=swap');
  :root {
    --background: 30 33% 98%;
    --foreground: 20 10% 15%;

    --card: 0 0% 100%;
    --card-foreground: 20 10% 15%;

    --popover: 0 0% 100%;
    --popover-foreground: 20 10% 15%;

    --primary: 24 100% 56%;
    --primary-foreground: 0 0% 100%;

    --secondary: 35 80% 90%;
    --secondary-foreground: 24 30% 20%;

    --muted: 35 30% 96%;
    --muted-foreground: 20 10% 40%;

    --accent: 142 43% 54%;
    --accent-foreground: 0 0% 100%;

    --destructive: 0 84.2% 60.2%;
    --destructive-foreground: 0 0% 98%;

    --border: 30 10% 90%;
    --input: 30 10% 90%;
    --ring: 24 100% 56%;

    --radius: 1rem;
  }

  .dark {
    --background: 20 10% 10%;
    --foreground: 0 0% 98%;

    --card: 20 10% 15%;
    --card-foreground: 0 0% 98%;

    --popover: 20 10% 15%;
    --popover-foreground: 0 0% 98%;

    --primary: 24 100% 56%;
    --primary-foreground: 0 0% 100%;

    --secondary: 35 30% 15%;
    --secondary-foreground: 0 0% 98%;

    --muted: 35 30% 20%;
    --muted-foreground: 20 10% 70%;

    --accent: 142 43% 54%;
    --accent-foreground: 0 0% 100%;

    --destructive: 0 62.8% 30.6%;
    --destructive-foreground: 0 0% 98%;

    --border: 20 10% 20%;
    --input: 20 10% 20%;
    --ring: 24 100% 56%;
  }

  * {
    border-color: hsl(var(--border));
  }

  body {
    background: hsl(var(--background));
    color: hsl(var(--foreground));
  }
</style>
