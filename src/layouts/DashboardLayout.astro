---
import Layout from './Layout.astro';
import { supabase } from '../lib/supabase';
import Navbar from '../components/dashboard/Navbar';

// Verificar autenticación
const { data: { session } } = await supabase.auth.getSession()

// Si no hay sesión, redirigir al login
if (!session) {
  return Astro.redirect('/login')
}

// Obtener el path actual para resaltar el enlace activo
const currentPath = Astro.url.pathname;
---

<Layout title="Dashboard">
  <div class="flex h-screen bg-gray-100">
    {/* Sidebar */}
    <aside class="w-64 bg-gray-800 text-white p-4 hidden md:block">
      <h1 class="text-2xl font-bold mb-6">Slainte Bar</h1>
      <nav>
        <ul class="space-y-2">
          <li>
            <a
              href="/dashboard"
              class={`flex items-center px-4 py-2 rounded-md transition-colors ${currentPath === '/dashboard' ? 'bg-gray-700 text-white' : 'text-gray-300 hover:bg-gray-700 hover:text-white'}`}
            >
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
              </svg>
              Dashboard
            </a>
          </li>
          <li>
            <a
              href="/dashboard/products"
              class={`flex items-center px-4 py-2 rounded-md transition-colors ${currentPath === '/dashboard/products' ? 'bg-gray-700 text-white' : 'text-gray-300 hover:bg-gray-700 hover:text-white'}`}
            >
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z" />
              </svg>
              Productos
            </a>
          </li>
          <li>
            <a
              href="/dashboard/categories"
              class={`flex items-center px-4 py-2 rounded-md transition-colors ${currentPath === '/dashboard/categories' ? 'bg-gray-700 text-white' : 'text-gray-300 hover:bg-gray-700 hover:text-white'}`}
            >
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z" />
              </svg>
              Categorías
            </a>
          </li>
          <li>
            <a
              href="/dashboard/products"
              class={`flex items-center px-4 py-2 rounded-md transition-colors ${currentPath === '/dashboard/products' ? 'bg-gray-700 text-white' : 'text-gray-300 hover:bg-gray-700 hover:text-white'}`}
            >
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z" />
              </svg>
              Productos
            </a>
          </li>
          <li>
            <a
              href="/dashboard/stats"
              class={`flex items-center px-4 py-2 rounded-md transition-colors ${currentPath === '/dashboard/stats' ? 'bg-gray-700 text-white' : 'text-gray-300 hover:bg-gray-700 hover:text-white'}`}
            >
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
              </svg>
              Estadísticas
            </a>
          </li>
        </ul>
      </nav>
    </aside>

    {/* Contenido principal */}
    <div class="flex-grow flex flex-col">
      {/* Navbar */}
      <Navbar />

      {/* Contenido */}
      <div class="p-4">
        <slot />
      </div>
    </div>
  </div>
</Layout>
