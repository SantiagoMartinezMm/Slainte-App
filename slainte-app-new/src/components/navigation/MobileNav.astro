---
// src/components/navigation/MobileNav.astro
import type { HTMLAttributes } from 'astro/types';
// Podría importar NavItem u otros componentes necesarios

interface Props extends HTMLAttributes<'nav'> {
  class?: string;
  // Props para controlar estado, items, etc.
}

const { class: className, ...props } = Astro.props;

// Estilos base para la navegación móvil.
// TODO: Definir si será un menú hamburguesa, barra inferior, etc.
// Estos estilos son un placeholder para una barra inferior fija.
const baseStyles = "fixed bottom-0 left-0 z-50 w-full h-16 bg-white border-t border-gray-200 dark:bg-gray-700 dark:border-gray-600 sm:hidden"; // Oculto en pantallas sm y mayores
---

<nav
  class:list={[
    baseStyles,
    className
  ]}
  {...props}
>
  <div class="grid h-full max-w-lg grid-cols-4 mx-auto font-medium">
    {/* Placeholder para items de navegación móvil */}
    <button type="button" class="inline-flex flex-col items-center justify-center px-5 hover:bg-gray-50 dark:hover:bg-gray-800 group">
      {/* Icono */}
      <span class="text-sm text-gray-500 dark:text-gray-400 group-hover:text-blue-600 dark:group-hover:text-blue-500">Home</span>
    </button>
    <button type="button" class="inline-flex flex-col items-center justify-center px-5 hover:bg-gray-50 dark:hover:bg-gray-800 group">
       {/* Icono */}
      <span class="text-sm text-gray-500 dark:text-gray-400 group-hover:text-blue-600 dark:group-hover:text-blue-500">Menu</span>
    </button>
    <button type="button" class="inline-flex flex-col items-center justify-center px-5 hover:bg-gray-50 dark:hover:bg-gray-800 group">
       {/* Icono */}
      <span class="text-sm text-gray-500 dark:text-gray-400 group-hover:text-blue-600 dark:group-hover:text-blue-500">Cart</span>
    </button>
    <button type="button" class="inline-flex flex-col items-center justify-center px-5 hover:bg-gray-50 dark:hover:bg-gray-800 group">
       {/* Icono */}
      <span class="text-sm text-gray-500 dark:text-gray-400 group-hover:text-blue-600 dark:group-hover:text-blue-500">Profile</span>
    </button>
  </div>
</nav>
